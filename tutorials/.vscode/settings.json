{
    "// 学生管理系统教程 - VS Code 配置": "",
    "// 提供更好的C语言开发体验": "",
    
    "// C/C++ 扩展配置": "",
    "C_Cpp.default.cStandard": "c99",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.compilerPath": "/usr/bin/gcc",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "/usr/include",
        "/usr/local/include"
    ],
    "C_Cpp.default.defines": [
        "_GNU_SOURCE",
        "DEBUG=1"
    ],
    "C_Cpp.default.compilerArgs": [
        "-Wall",
        "-Wextra",
        "-std=c99",
        "-g"
    ],
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, IndentWidth: 4, TabWidth: 4, UseTab: Never, ColumnLimit: 100 }",
    "C_Cpp.autocomplete": "Default",
    "C_Cpp.errorSquiggles": "Enabled",
    "C_Cpp.dimInactiveRegions": true,
    
    "// 编辑器配置": "",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.trimAutoWhitespace": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80, 100],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.minimap.enabled": true,
    "editor.showFoldingControls": "always",
    "editor.foldingStrategy": "indentation",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    
    "// 文件配置": "",
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    
    "// 文件关联": "",
    "files.associations": {
        "*.c": "c",
        "*.h": "c",
        "Makefile": "makefile",
        "*.mk": "makefile",
        "*.md": "markdown"
    },
    
    "// 搜索配置": "",
    "search.exclude": {
        "**/build": true,
        "**/*.o": true,
        "**/*.exe": true,
        "**/*.out": true,
        "**/a.out": true,
        "**/.git": true,
        "**/node_modules": true
    },
    
    "// 文件监视器配置": "",
    "files.watcherExclude": {
        "**/build/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true
    },
    
    "// 终端配置": "",
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.cwd": "${workspaceFolder}/tutorials",
    "terminal.integrated.env.linux": {
        "PATH": "${env:PATH}:${workspaceFolder}/tutorials/build"
    },
    "terminal.integrated.env.osx": {
        "PATH": "${env:PATH}:${workspaceFolder}/tutorials/build"
    },
    
    "// 调试配置": "",
    "debug.allowBreakpointsEverywhere": true,
    "debug.showInStatusBar": "always",
    "debug.console.fontSize": 14,
    "debug.console.lineHeight": 18,
    
    "// Git 配置": "",
    "git.ignoreLimitWarning": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    
    "// 扩展推荐配置": "",
    "extensions.ignoreRecommendations": false,
    
    "// Markdown 配置": "",
    "markdown.preview.fontSize": 14,
    "markdown.preview.lineHeight": 1.6,
    "markdown.preview.fontFamily": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
    "markdown.preview.breaks": true,
    "markdown.preview.linkify": true,
    
    "// 代码片段配置": "",
    "editor.snippetSuggestions": "top",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    
    "// 语言特定配置": "",
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": true
    },
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true
    },
    
    "// 工作区特定配置": "",
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "vs-seti",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.startupEditor": "readme",
    
    "// 问题匹配器配置": "",
    "problemMatcher": {
        "$gcc": {
            "owner": "cpp",
            "fileLocation": ["relative", "${workspaceFolder}"],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        }
    },
    
    "// 任务配置提示": "",
    "// 使用 Ctrl+Shift+P -> Tasks: Configure Task 来配置构建任务": "",
    "// 使用 Ctrl+Shift+P -> Debug: Add Configuration 来配置调试": "",
    
    "// 性能配置": "",
    "search.followSymlinks": false,
    "search.useRipgrep": true,
    "search.maintainFileSearchCache": true,
    "typescript.surveys.enabled": false,
    "telemetry.enableTelemetry": false,
    
    "// 安全配置": "",
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false
}